@page "/admin-course"
@layout AdminLayout
@using MyApp.BlazorUI.DTOs
@using MyApp.BlazorUI.Services
@using MyApp.BlazorUI.Components.Shared
@using MyApp.BlazorUI.Components.Shared.Admin

@inject CourseService CourseService
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>Course Management</PageTitle>

<MudPaper Class="course-container" Elevation="1">
    <div class="header-section">
        <MudText Typo="Typo.h5" Class="title">Course Management</MudText>
        <MudButton OnClick="OpenDialogAddCourseAsync" Variant="Variant.Filled" Class="btn-add">
            <MudIcon Icon="@Icons.Material.Filled.Add" /> Add Course
        </MudButton>
    </div>

    <div class="course-table">
        <MudTable Items="@Courses" FixedHeader="true" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading"
            LoadingProgressColor="Color.Info" Elevation="0">
            <HeaderContent>
                <MudTh class="t">Name</MudTh>
                <MudTh class="t">Image</MudTh>
                <MudTh class="t">Price</MudTh>
                <MudTh class="t">Description</MudTh>
                <MudTh class="t">Category</MudTh>
                <MudTh class="t">Schedule</MudTh>
                <MudTh class="t">Available Slot</MudTh>
                <MudTh class="t">Action</MudTh>
            </HeaderContent>

            <RowTemplate>
                <MudTd class="t">@context.Name</MudTd>
                <MudTd class="t">
                    @if (!string.IsNullOrEmpty(context.ImageUrl))
                    {
                        <MudImage Src="@CourseService.GetFullImageUrl(context.ImageUrl)" Width="40" Height="40" />
                    }
                </MudTd>
                <MudTd class="t">@("IDR " + context.Price.ToString("N0", new System.Globalization.CultureInfo("id-ID")))
                </MudTd>
                <MudTd class="t">@context.Description</MudTd>
                <MudTd class="t">@context.CategoryName</MudTd>
                <MudTd class="t">@context.Schedule</MudTd>
                <MudTd class="t">@context.AvailableSlot</MudTd>
                <MudTd class="t gap-2">
                    <MudButton Variant="Variant.Filled" Class="btn-edit"
                        OnClick="@(() => OpenDialogEditCourseAsync(context))">Edit</MudButton>
                    <MudButton Variant="Variant.Filled" Class="btn-delete"
                        OnClick="@(() => OnDeleteCourseAsync(context.Id))">Delete</MudButton>
                </MudTd>
            </RowTemplate>

            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </div>
</MudPaper>

@code {
    private bool _loading;
    private List<CourseModel> Courses = new();
    private List<CategoryDto> Categories = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadInitialDataAsync();
    }

    private async Task LoadInitialDataAsync()
    {
        _loading = true;
        try
        {
            await Task.WhenAll(LoadCoursesAsync(), LoadCategoriesAsync());
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Gagal memuat data awal: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task LoadCoursesAsync()
    {
        try
        {
            Courses = await CourseService.GetCoursesAsync() ?? new();
            if (Courses.Count == 0)
                Snackbar.Add("Tidak ada data course ditemukan.", Severity.Info);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Gagal memuat data course: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadCategoriesAsync()
    {
        try
        {
            Categories = await CourseService.GetCategoriesAsync() ?? new();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Gagal memuat kategori: {ex.Message}", Severity.Error);
        }
    }

    private async Task OpenDialogAddCourseAsync()
    {
        var parameters = new DialogParameters
        {
            ["Categories"] = Categories
        };

        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium };

        var dialog = DialogService.Show<AddCourseDialog>("Tambah Course", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            // üîπ Ambil course baru dari API, tapi hanya tambahkan ke list tanpa reset urutan
            var newCourses = await CourseService.GetCoursesAsync();

            // üîπ Cari course baru yang belum ada di list sekarang
            var latest = newCourses
            .Where(nc => !Courses.Any(c => c.Id == nc.Id))
            .ToList();

            if (latest.Any())
            {
                // üîπ Tambahkan ke akhir list agar tidak di atas
                Courses.AddRange(latest);
            }

            Snackbar.Add("Course baru berhasil ditambahkan dan ditampilkan.", Severity.Success);
        }
    }



    private async Task OpenDialogEditCourseAsync(CourseModel course)
    {
        var parameters = new DialogParameters
{
{ "Categories", Categories },
{ "CourseToEdit", course }
};

        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Medium, FullWidth = true };

        var dialog = await DialogService.ShowAsync<EditCourseDialog>("Edit Course", parameters: parameters, options: options);
        var result = await dialog.Result;

        if (result?.Data is true)
        {
            Snackbar.Add("‚úÖ Course berhasil diperbarui.", Severity.Success);
            await LoadCoursesAsync();
        }
    }

    private async Task OnDeleteCourseAsync(int id)
    {
        bool? confirmed = await DialogService.ShowMessageBox(
        "Konfirmasi Hapus",
        "Apakah Anda yakin ingin menghapus course ini?",
        yesText: "Ya, Hapus",
        cancelText: "Batal");

        if (confirmed == true)
        {
            var success = await CourseService.DeleteCourseAsync(id);
            if (success)
            {
                Snackbar.Add("üóëÔ∏è Course berhasil dihapus.", Severity.Success);
                await LoadCoursesAsync();
            }
            else
            {
                Snackbar.Add("Gagal menghapus course.", Severity.Error);
            }
        }
    }

}

