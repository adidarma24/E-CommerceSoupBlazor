@page "/admin-course"
@layout AdminLayout
@using MyApp.BlazorUI.DTOs
@using MyApp.BlazorUI.Services
@using MyApp.BlazorUI.Components.Shared
@using MyApp.BlazorUI.Components.Shared.Admin

@inject NavigationManager NavigationManager
@inject CourseService CourseService
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>Course Management</PageTitle>

<MudPaper Class="course-container" Elevation="1">
    <!-- Header Section -->
    <div class="header-section">
        <MudText Typo="Typo.h5" Class="title">Course Management</MudText>

        <MudButton OnClick="OpenDialogAddCourseAsync" Variant="Variant.Filled" Color="Color.Success"
            StartIcon="@Icons.Material.Filled.Add">
            Add Course
        </MudButton>
    </div>

    <!-- Table Section -->
    <div class="table-wrapper">
        <MudTable Items="@Courses" FixedHeader="true" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading"
            LoadingProgressColor="Color.Info" Elevation="0" RowsPerPage="5" Class="course-table">

            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Image</MudTh>
                <MudTh>Price</MudTh>
                <MudTh>Description</MudTh>
                <MudTh>Category</MudTh>
                <MudTh>Action</MudTh>
            </HeaderContent>

            <RowTemplate>
                <MudTd>@context.Name</MudTd>

                <MudTd>
                    @if (!string.IsNullOrEmpty(context.ImageUrl))
                    {
                        <MudImage Src="@CourseService.GetFullImageUrl(context.ImageUrl)" Width="40" Height="40"
                            Class="rounded-image" />
                    }
                </MudTd>

                <MudTd>@($"IDR {context.Price:N0}")</MudTd>
                <MudTd>@context.Description</MudTd>
                <MudTd>@context.CategoryName</MudTd>

                <MudTd Class="action-buttons">
                    <MudTooltip Text="Edit Course">
                        <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Warning" Size="Size.Medium"
                            OnClick="@(() => OpenDialogEditCourseAsync(context))" />
                    </MudTooltip>

                    <MudTooltip Text="Hapus Course">
                        <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Medium"
                            OnClick="@(() => OnDeleteCourseAsync(context.Id))" />
                    </MudTooltip>

                    <MudTooltip Text="Kelola Jadwal Course">
                        <MudIconButton Icon="@Icons.Material.Filled.Schedule" Color="Color.Primary" Size="Size.Medium"
                            OnClick="@(() => NavigateToSchedulePage(context.Id))" />
                    </MudTooltip>
                </MudTd>
            </RowTemplate>

            <PagerContent>
                <MudTablePager PageSizeOptions="new int[] { 5, 10, 25, 50, 100 }" />
            </PagerContent>
        </MudTable>
    </div>
</MudPaper>

@code {
    private bool _loading;
    private List<CourseModel> Courses = new();
    private List<CategoryDto> Categories = new();

    protected override async Task OnInitializedAsync()
    => await LoadInitialDataAsync();

    private async Task LoadInitialDataAsync()
    {
        _loading = true;
        try
        {
            await Task.WhenAll(LoadCoursesAsync(), LoadCategoriesAsync());
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Gagal memuat data awal: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task LoadCoursesAsync()
    {
        try
        {
            Courses = await CourseService.GetCoursesAsync() ?? new();
            if (!Courses.Any())
                Snackbar.Add("Tidak ada data course ditemukan.", Severity.Info);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Gagal memuat data course: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadCategoriesAsync()
    {
        try
        {
            Categories = await CourseService.GetCategoriesAsync() ?? new();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Gagal memuat kategori: {ex.Message}", Severity.Error);
        }
    }

    private void NavigateToSchedulePage(int courseId)
    => NavigationManager.NavigateTo($"/admin-course/{courseId}/schedule");

    private async Task OpenDialogAddCourseAsync()
    {
        var parameters = new DialogParameters { ["Categories"] = Categories };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium };

        var dialog = DialogService.Show<AddCourseDialog>("Tambah Course", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            var newCourses = await CourseService.GetCoursesAsync();
            var latest = newCourses?.Where(nc => !Courses.Any(c => c.Id == nc.Id)).ToList();

            if (latest?.Any() == true)
                Courses.AddRange(latest);

            Snackbar.Add("‚úÖ Course baru berhasil ditambahkan.", Severity.Success);
        }
    }

    private async Task OpenDialogEditCourseAsync(CourseModel course)
    {
        var parameters = new DialogParameters
        {
            ["Categories"] = Categories,
            ["CourseToEdit"] = course
        };

        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Medium, FullWidth = true };

        var dialog = await DialogService.ShowAsync<EditCourseDialog>("Edit Course", parameters, options);
        var result = await dialog.Result;

        if (result?.Data is true)
        {
            Snackbar.Add("‚úÖ Course berhasil diperbarui.", Severity.Success);
            await LoadCoursesAsync();
        }
    }

    private async Task OnDeleteCourseAsync(int courseId)
    {
        bool? confirmed = await DialogService.ShowMessageBox(
        "Konfirmasi Hapus",
        "Apakah Anda yakin ingin menghapus course ini?",
        yesText: "Ya, Hapus",
        cancelText: "Batal");

        if (confirmed == true)
        {
            var success = await CourseService.DeleteCourseAsync(courseId);
            if (success)
            {
                Snackbar.Add("üóëÔ∏è Course berhasil dihapus.", Severity.Success);
                await LoadCoursesAsync();
            }
            else
            {
                Snackbar.Add("Gagal menghapus course.", Severity.Error);
            }
        }
    }
}

